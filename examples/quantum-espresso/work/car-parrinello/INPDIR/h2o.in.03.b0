&CONTROL
  title = ' Water 32 molecules ',
  calculation = 'cp',
  restart_mode = 'restart',
  ndr = 51,
  ndw = 52,
  nstep  = 1000,
  iprint = 100, 
  isave  = 100,
  tstress = .TRUE.,
  tprnfor = .TRUE.,
  dt    = 5.0d0,
  etot_conv_thr = 1.d-6,
  prefix = 'h2o'
  outdir = './OUTDIR.b0'
  pseudo_dir = './INPDIR'
/

&SYSTEM
  ibrav = 14, 
  celldm(1) = 18.65, 
  celldm(2) = 1.0, 
  celldm(3) = 1.0, 
  celldm(4) = 0.0, 
  celldm(5) = 0.0, 
  celldm(6) = 0.0, 
  nat = 96,
  ntyp = 2,
  ecutwfc = 25.0,
  nr1b= 24, nr2b = 24, nr3b = 24,
/

&ELECTRONS
  emass = 400.d0,
  emass_cutoff = 2.5d0,
  orthogonalization = 'ortho',
  ortho_eps = 2.d-7,
  ortho_max = 100,
  electron_dynamics = 'verlet',
/

&IONS
  ion_dynamics = 'verlet',
  ion_radius(1) = 0.8d0,
  ion_radius(2) = 0.5d0,
  ion_temperature = 'not_controlled',
/

&CELL
  cell_dynamics = 'none',
  cell_velocities = 'zero',
  press = 0.0d0,
  wmass = 70000.0d0
/

