{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "config_schema.json",
  "type": "object",
  "definitions": {
    "serializer": {
      "$id": "#/definitions/serializer",
      "type": "object",
      "properties": {
        "predump": {
          "type": "string"
        },
        "postload": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": [
            "name",
            "file"
          ],
          "default": "name"
        }
      }
    },
    "step": {
      "$id": "#/definitions/step",
      "type": "object",
      "properties": {
        "in": {
          "type": "array",
          "items": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "scatter": {
                    "type": "integer"
                  },
                  "serializer": {
                    "oneOf": [
                      {
                        "type": "string"
                      },
                      {
                        "type": "object",
                        "$ref": "#/definitions/serializer"
                      }
                    ]
                  },
                  "type": {
                    "type": "string",
                    "enum": [
                      "control",
                      "env",
                      "name",
                      "file"
                    ],
                    "default": "name"
                  },
                  "value": {},
                  "valueFrom": {
                    "type": "string"
                  }
                },
                "additionalProperties": false
              }
            ]
          },
          "uniqueItems": true
        },
        "autoin": {
          "type": "boolean",
          "default": true
        },
        "out": {
          "type": "array",
          "items": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "object",
                "properties": {
                  "gather": {
                    "strategy": "string"
                  },
                  "name": {
                    "type": "string"
                  },
                  "serializer": {
                    "oneOf": [
                      {
                        "type": "string"
                      },
                      {
                        "type": "object",
                        "$ref": "#/definitions/serializer"
                      }
                    ]
                  },
                  "type": {
                    "type": "string",
                    "enum": [
                      "control",
                      "name",
                      "file"
                    ],
                    "default": "name"
                  },
                  "valueFrom": {
                    "type": "string"
                  }
                },
                "additionalProperties": false
              }
            ]
          },
          "uniqueItems": true
        }
      },
      "additionalProperties": false
    },
    "target": {
      "$id": "#/definitions/target",
      "type": "object",
      "properties": {
        "model": {
          "$id": "#/properties/model",
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "object",
              "$ref": "https://raw.githubusercontent.com/alpha-unito/streamflow/feature/workflow-executor/streamflow/config/schemas/v1.0/config_schema.json#/definitions/model"
            }
          ]
        },
        "resources": {
          "type": "integer",
          "default": 1
        },
        "service": {
          "type": "string"
        },
        "workdir": {
          "type": "string"
        }
      },
      "required": [
        "model"
      ],
      "additionalProperties": false
    }
  },
  "properties": {
    "interpreter": {
      "$id": "#/properties/interpreter",
      "type": "string",
      "default": "ipython"
    },
    "models": {
      "$id": "#/properties/models",
      "type": "object",
      "patternProperties": {
        "^[a-z][a-zA-Z0-9._-]*$": {
          "$ref": "https://raw.githubusercontent.com/alpha-unito/streamflow/feature/workflow-executor/streamflow/config/schemas/v1.0/config_schema.json#/definitions/model"
        }
      },
      "additionalProperties": false
    },
    "serializers": {
      "$id": "#/properties/serializers",
      "type": "object",
      "patternProperties": {
        "^[a-z][a-zA-Z0-9._-]*$": {
          "$ref": "#/definitions/serializer"
        }
      },
      "additionalProperties": false
    },
    "step": {
      "$id": "#/properties/step",
      "type": "object",
      "$ref": "#/definitions/step"
    },
    "target": {
      "$id": "#/properties/target",
      "type": "object",
      "$ref": "#/definitions/target"
    },
    "version": {
      "type": "string"
    }
  },
  "required": [
    "step",
    "version"
  ],
  "additionalProperties": false
}