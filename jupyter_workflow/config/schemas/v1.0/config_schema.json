{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$id": "https://jupyter-workflow.di.unito.it/config/schemas/v1.0/config_schema.json",
  "type": "object",
  "$defs": {
    "deployment": {
      "title": "Deployment",
      "type": "object",
      "$defs": {},
      "properties": {
        "external": {
          "type": "boolean",
          "description": "If set, StreamFlow does not manage the lifecycle of the execution environment. This means that all required services must be up and running when the workflow starts",
          "default": false
        },
        "type": {
          "type": "string"
        },
        "workdir": {
          "type": "string",
          "description": "Path to the working directory.",
          "default": "${TMPDIR}/streamflow"
        }
      },
      "$comment": "The `config` property is injected by each Connector extension",
      "required": [
        "type",
        "config"
      ]
    },
    "scatter": {
      "title": "Scatter",
      "type": "object",
      "properties": {
        "items": {
          "type": "array",
          "items": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "object",
                "oneOf": [
                  {
                    "properties": {
                      "name": {
                        "type": "string",
                        "description": "The variable that must be scattered"
                      },
                      "size": {
                        "description": "The size of each shard (for now, multi-dimensional shards are not supported)",
                        "type": "integer",
                        "default": "1"
                      }
                    }
                  },
                  {
                    "properties": {
                      "name": {
                        "type": "string",
                        "description": "The variable that must be scattered"
                      },
                      "num": {
                        "description": "The number of shards",
                        "type": "integer",
                        "default": "The length of the list"
                      }
                    }
                  }
                ],
                "required": [
                  "name"
                ]
              },
              {
                "type": "object",
                "$ref": "#/$defs/scatter"
              }
            ]
          }
        },
        "method": {
          "type": "string",
          "description": "In case of multiple scatter variables, how they must be combined",
          "enum": [
            "cartesian",
            "dotproduct"
          ],
          "default": "cartesian"
        }
      }
    },
    "serializer": {
      "title": "Serializer",
      "type": "object",
      "properties": {
        "predump": {
          "type": "string",
          "title": "Predump logic"
        },
        "postload": {
          "type": "string",
          "title": "Postload logic"
        },
        "type": {
          "type": "string",
          "title": "Output type",
          "enum": [
            "name",
            "file"
          ],
          "default": "name"
        }
      }
    },
    "step": {
      "title": "Step",
      "type": "object",
      "properties": {
        "background": {
          "type": "boolean",
          "title": "Run in background",
          "default": false,
          "description": "A cell without output ports can run in background when the notebook is in interactive mode. Note that this has no effect in workflow mode"
        },
        "autoin": {
          "type": "boolean",
          "title": "Auto detect inputs",
          "default": true
        },
        "in": {
          "type": "array",
          "title": "Input dependencies",
          "items": {
            "anyOf": [
              {
                "type": "string",
                "title": "Name"
              },
              {
                "type": "object",
                "title": "Definition",
                "properties": {
                  "name": {
                    "type": "string",
                    "title": "Name"
                  },
                  "serializer": {
                    "oneOf": [
                      {
                        "type": "string",
                        "title": "External"
                      },
                      {
                        "type": "object",
                        "title": "Inline",
                        "$ref": "#/$defs/serializer"
                      }
                    ],
                    "title": "Serializer"
                  },
                  "type": {
                    "type": "string",
                    "title": "Dependency type",
                    "enum": [
                      "control",
                      "env",
                      "name",
                      "file"
                    ],
                    "default": "name"
                  },
                  "value": {},
                  "valueFrom": {
                    "type": "string",
                    "title": "Value source"
                  }
                },
                "additionalProperties": false
              }
            ]
          },
          "uniqueItems": true
        },
        "out": {
          "type": "array",
          "title": "Output dependencies",
          "items": {
            "anyOf": [
              {
                "type": "string",
                "title": "Name"
              },
              {
                "type": "object",
                "title": "Definition",
                "properties": {
                  "name": {
                    "type": "string",
                    "title": "Name"
                  },
                  "serializer": {
                    "oneOf": [
                      {
                        "type": "string",
                        "title": "External"
                      },
                      {
                        "type": "object",
                        "title": "Inline",
                        "$ref": "#/$defs/serializer"
                      }
                    ],
                    "title": "Object serializer"
                  },
                  "type": {
                    "type": "string",
                    "title": "Dependency type",
                    "enum": [
                      "control",
                      "name",
                      "file"
                    ],
                    "default": "name"
                  },
                  "value": {},
                  "valueFrom": {
                    "type": "string",
                    "title": "Value source"
                  }
                },
                "additionalProperties": false
              }
            ]
          },
          "uniqueItems": true
        },
        "scatter": {
          "type": "object",
          "$ref": "#/$defs/scatter"
        },
        "workdir": {
          "type": "string",
          "title": "Working directory",
          "description": "Path to the working directory",
          "default": "${TMPDIR}/streamflow"
        }
      },
      "additionalProperties": false
    },
    "target": {
      "title": "Target",
      "type": "object",
      "properties": {
        "deployment": {
          "oneOf": [
            {
              "type": "string",
              "title": "External"
            },
            {
              "type": "object",
              "title": "Inline",
              "$ref": "#/$defs/deployment"
            }
          ]
        },
        "locations": {
          "type": "integer",
          "description": "If greater than one, the STREAMFLOW_HOSTS variable contains the comma-separated list of nodes allocated for the task",
          "default": 1
        },
        "service": {
          "type": "string"
        },
        "workdir": {
          "type": "string",
          "title": "Working directory",
          "description": "Path to the working directory. It overrides the deployment-level setting.",
          "default": "${TMPDIR}/streamflow"
        }
      },
      "required": [
        "deployment"
      ],
      "additionalProperties": false
    }
  },
  "properties": {
    "interpreter": {
      "type": "string",
      "default": "ipython"
    },
    "deployments": {
      "type": "object",
      "title": "Deployments",
      "patternProperties": {
        "^[a-z][a-zA-Z0-9._-]*$": {
          "$ref": "#/$defs/deployment"
        }
      },
      "additionalProperties": false
    },
    "serializers": {
      "type": "object",
      "title": "Serializers",
      "patternProperties": {
        "^[a-z][a-zA-Z0-9._-]*$": {
          "$ref": "#/$defs/serializer"
        }
      },
      "additionalProperties": false
    },
    "step": {
      "type": "object",
      "$ref": "#/$defs/step"
    },
    "target": {
      "type": "object",
      "$ref": "#/$defs/target"
    },
    "version": {
      "type": "string"
    }
  },
  "required": [
    "version"
  ],
  "additionalProperties": false
}